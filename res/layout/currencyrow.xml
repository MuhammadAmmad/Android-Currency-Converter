<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" 
    android:orientation="horizontal"
    android:id="@+id/currencyrowLinear1">
    <ImageView
        android:id="@+id/currencyicon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginRight="3dip"
        android:layout_marginTop="1dip"
        android:scaleType="centerInside"
        android:src="@drawable/usbig"/>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF"
        android:id="@+id/currencyrowRelative1">
        <TextView
            android:id="@+id/currencytoptext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/currencyrowRelative1"
		    android:layout_alignParentLeft="true"
            android:textStyle="bold"
            android:gravity="center_vertical" 
            android:textColor="#000000"
            android:textSize="14dip" 
            android:text="ANG Netherlands Antilles Guilders" 
            android:typeface="sans"/>
	    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:id="@+id/currencybottomtext"
            android:singleLine="true"
            android:gravity="right"
            android:text="1234.543940"
            android:textStyle="bold"
            android:textSize="26sp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/currencytoptext"/>
	     <!--   android:layout_toRightOf="@+id/currencySymbol" -->
	    <TextView 
	         android:layout_toLeftOf="@+id/currencybottomtext"
	         android:layout_below="@+id/currencytoptext" 
	         android:layout_alignBaseline="@+id/currencybottomtext"
	         android:paddingRight="5dip"
	         android:text="$" 
	         android:textStyle="bold"
             android:textSize="20dip"
             android:textColor="#000000"
	         android:layout_height="wrap_content" 
	         android:layout_width="wrap_content" 
	         android:id="@+id/currencySymbol"/>
     </RelativeLayout>
</LinearLayout>